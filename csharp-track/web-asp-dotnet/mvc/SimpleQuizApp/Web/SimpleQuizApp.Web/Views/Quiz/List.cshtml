@using SimpleQuizApp.Web.ViewModels.Quizzes
@model QuizListViewModel

@{
	ViewData["Title"] = "Quiz List";
}

<h1>Quiz List</h1>

<table class="table">
	<thead>
		<tr>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var quiz in Model.Quizzes)
		{
			<tr>
				<td>
					@Html.ActionLink("Details", "Details", new { id = quiz.Id })
				</td>
				<td>@quiz.Title</td>
				<td>@quiz.Description</td>
			</tr>
		}
	</tbody>
</table>
